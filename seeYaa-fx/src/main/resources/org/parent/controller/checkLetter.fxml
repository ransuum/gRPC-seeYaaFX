<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<StackPane fx:id="rootStack"
           prefHeight="866.0" prefWidth="1100.0"
           styleClass="root" stylesheets="@static/checkMyLetters.css"
           xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.parent.controller.CheckMyLetterController">

    <BorderPane styleClass="main-view-blur-target">
        <top>
            <VBox styleClass="header-section" BorderPane.alignment="CENTER">
                <HBox alignment="CENTER_LEFT" spacing="15.0" prefHeight="48.0">
                    <Button mnemonicParsing="false" onAction="#quit" styleClass="icon-button-back">
                        <graphic>
                            <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@images/arrow-left.png"/>
                            </ImageView>
                        </graphic>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Button fx:id="historyButton" mnemonicParsing="false" onAction="#toggleHistory"
                            styleClass="pill-button-secondary" text="History (0)">
                        <graphic>
                            <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" opacity="0.6">
                                <Image url="@images/clock.png"/>
                            </ImageView>
                        </graphic>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>

                    <Button mnemonicParsing="false" onAction="#helpToUnderstandText"
                            styleClass="pill-button" text="Explain with AI">
                        <graphic>
                            <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@images/chatbot.png"/>
                            </ImageView>
                        </graphic>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <Label fx:id="topic" styleClass="subject-label" text="Project Update" wrapText="true"/>
                </HBox>
                <Separator prefWidth="200.0" />
            </VBox>
        </top>

        <center>
            <ScrollPane fitToWidth="true" styleClass="body-scroll-pane" BorderPane.alignment="CENTER">
                <VBox spacing="20.0" styleClass="thread-container">
                    <padding>
                        <Insets bottom="40.0" left="40.0" right="40.0" top="20.0"/>
                    </padding>

                    <VBox styleClass="email-card-expanded">
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <padding>
                                <Insets bottom="15.0" left="20.0" right="20.0" top="20.0"/>
                            </padding>
                            <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                                <clip>
                                    <Circle centerX="24" centerY="24" radius="24"/>
                                </clip>
                                <Image url="@images/user.png"/>
                            </ImageView>
                            <VBox alignment="CENTER_LEFT" spacing="2.0">
                                <Label fx:id="firstNameLast" styleClass="sender-name" text="John Doe"/>
                                <Label fx:id="email" styleClass="sender-email" text="&lt;john.doe@example.com&gt;"/>
                            </VBox>
                        </HBox>

                        <TextArea fx:id="textOfLetter" editable="false" prefRowCount="10"
                                  styleClass="email-content-area" wrapText="true"/>

                        <VBox spacing="10.0">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
                            </padding>
                            <Separator />
                            <Label styleClass="section-header" text="Attachments"/>
                            <ScrollPane fitToWidth="true" prefHeight="100.0" styleClass="files-scroll-pane">
                                <VBox fx:id="filesContainer" spacing="8.0" />
                            </ScrollPane>
                        </VBox>
                    </VBox>

                    <Button mnemonicParsing="false" onAction="#answer" styleClass="reply-pill-button" text="Reply">
                        <graphic>
                            <ImageView fitHeight="14.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true"><Image url="@images/reply.png"/></ImageView>
                        </graphic>
                    </Button>
                </VBox>
            </ScrollPane>
        </center>
    </BorderPane>

    <StackPane fx:id="historyOverlay" visible="false" styleClass="modal-overlay">
        <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="500.0" prefWidth="400.0" styleClass="modal-window">

            <HBox alignment="CENTER_LEFT" styleClass="modal-header">
                <Label styleClass="modal-title" text="Discussion History" />
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#toggleHistory" styleClass="icon-button-close" text="âœ•" />
            </HBox>

            <ScrollPane fitToWidth="true" styleClass="modal-scroll" VBox.vgrow="ALWAYS">
                <VBox fx:id="answers" spacing="0.0" />
            </ScrollPane>
        </VBox>
    </StackPane>

</StackPane>

