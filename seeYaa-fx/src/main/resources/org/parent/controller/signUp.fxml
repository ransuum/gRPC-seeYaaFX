<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<StackPane prefHeight="554.0" prefWidth="777.0" stylesheets="@static/signUp.css" xmlns="http://javafx.com/javafx/22"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.parent.controller.SignUpController">
   <!-- Main Card Container -->
   <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0"
         prefWidth="750.0" styleClass="signup-card"><!-- LEFT PANEL: Profile Image Section -->
      <VBox alignment="CENTER" prefHeight="500.0" prefWidth="300.0" styleClass="left-panel">
         <Label styleClass="white-label" text="Profile Picture"/>

         <StackPane prefHeight="150.0" prefWidth="150.0">
            <VBox.margin>
               <Insets top="20.0"/>
            </VBox.margin>
            <!-- Profile Image with Circular Clip -->
            <ImageView fitHeight="160.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true">
               <clip>
                  <Circle centerX="80" centerY="80" radius="80"/>
               </clip>
               <Image url="@images/profile.png"/>
            </ImageView>

            <!-- Overlay Add Button -->
            <Button contentDisplay="GRAPHIC_ONLY" maxHeight="40.0" maxWidth="40.0" minHeight="40.0"
                    minWidth="40.0" mnemonicParsing="false" styleClass="add-btn"
                    StackPane.alignment="BOTTOM_RIGHT">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <Image url="@images/add.png"/>
                  </ImageView>
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
               <StackPane.margin>
                  <Insets bottom="10.0" right="60.0"/>
               </StackPane.margin>
            </Button>
         </StackPane>
         <Label styleClass="white-label-small" text="Upload a photo"/>
      </VBox>

      <!-- RIGHT PANEL: Form Inputs -->
      <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" spacing="15.0" styleClass="right-panel">
         <padding>
            <Insets bottom="40.0" left="50.0" right="50.0" top="40.0"/>
         </padding>
         <Label styleClass="header-label" text="Create Account"/>

         <!-- Row 1: Name Fields side by side -->
         <HBox spacing="15.0">
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
               <Label styleClass="field-label" text="First Name"/>
               <TextField fx:id="firstName" promptText="John" styleClass="input-field"/>
            </VBox>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
               <Label styleClass="field-label" text="Last Name"/>
               <TextField fx:id="lastName" promptText="Doe" styleClass="input-field"/>
            </VBox>
         </HBox>

         <!-- Row 2: Username -->
         <VBox spacing="5.0">
            <Label styleClass="field-label" text="Username"/>
            <TextField fx:id="username" promptText="johndoe123" styleClass="input-field"/>
         </VBox>

         <!-- Row 3: Email -->
         <VBox spacing="5.0">
            <Label styleClass="field-label" text="Email Address"/>
            <TextField fx:id="email" promptText="john@example.com" styleClass="input-field"/>
         </VBox>

         <!-- Row 4: Password -->
         <VBox spacing="5.0">
            <Label styleClass="field-label" text="Password"/>
            <TextField fx:id="password" promptText="••••••••" styleClass="input-field"/>
            <!-- Note: Typically use PasswordField here unless you specifically want TextField -->
         </VBox>

         <!-- Confirm Button -->
         <Button mnemonicParsing="false" onAction="#signUp" prefHeight="45.0" prefWidth="150.0"
                 styleClass="submit-btn" text="Sign Up">
            <VBox.margin>
               <Insets top="20.0"/>
            </VBox.margin>
         </Button>
      </VBox>

   </HBox>
</StackPane>