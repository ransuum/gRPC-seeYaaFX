<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="650.0" prefWidth="950.0"
      styleClass="edit-card" stylesheets="@static/edit.css"
      xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.parent.controller.EditController">

    <VBox alignment="CENTER" prefWidth="320.0" spacing="10.0" styleClass="left-panel">
        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
        </padding>

        <StackPane>
            <VBox.margin>
                <Insets bottom="15.0"/>
            </VBox.margin>

            <ImageView fitHeight="160.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true">
                <clip>
                    <Circle centerX="80" centerY="80" radius="80"/>
                </clip>
                <Image url="@images/profile.png"/>
            </ImageView>

            <Button contentDisplay="GRAPHIC_ONLY" styleClass="camera-btn" StackPane.alignment="BOTTOM_RIGHT">
                <graphic>
                    <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@images/edit-text.png"/>
                    </ImageView>
                </graphic>
                <StackPane.margin>
                    <Insets bottom="5.0" right="25.0"/>
                </StackPane.margin>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
        </StackPane>

        <Label styleClass="section-header-white" text="Your Profile"/>

        <TextField fx:id="email" alignment="CENTER" disable="true" editable="false"
                   text="dima@example.com" styleClass="email-display-field"/>
    </VBox>

    <VBox HBox.hgrow="ALWAYS" spacing="25.0" styleClass="right-panel">
        <padding>
            <Insets bottom="40.0" left="60.0" right="60.0" top="40.0"/>
        </padding>

        <VBox spacing="5.0">
            <Label styleClass="page-title" text="Edit Profile"/>
            <Label text="Manage your personal information and security settings." textFill="#9ca3af"
                   style="-fx-font-size: 14px;"/>
        </VBox>

        <Separator prefWidth="200.0"/>

        <!-- Section 1: Personal Info -->
        <VBox spacing="15.0">
            <Label styleClass="section-label" text="PERSONAL INFORMATION"/>

            <HBox spacing="20.0">
                <!-- First Name -->
                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                    <CheckBox fx:id="firstnameCheck" text="First Name"/>
                    <TextField fx:id="firstname" disable="true" promptText="John" styleClass="input-field"/>
                </VBox>

                <!-- Last Name -->
                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                    <CheckBox fx:id="lastnameCheck" text="Last Name"/>
                    <TextField fx:id="lastname" disable="true" promptText="Doe" styleClass="input-field"/>
                </VBox>
            </HBox>
        </VBox>

        <!-- Section 2: Account Security -->
        <VBox spacing="15.0">
            <Label styleClass="section-label" text="ACCOUNT SECURITY"/>

            <!-- Username -->
            <VBox spacing="8.0">
                <CheckBox fx:id="usernameCheck" text="Username"/>
                <TextField fx:id="username" disable="true" promptText="johndoe" styleClass="input-field"/>
            </VBox>

            <!-- Password -->
            <VBox spacing="8.0">
                <CheckBox fx:id="password1Check" text="Change Password"/>
                <HBox spacing="20.0">
                    <TextField fx:id="password1" disable="true" promptText="New Password"
                               styleClass="input-field" HBox.hgrow="ALWAYS"/>
                    <TextField fx:id="password2" disable="true" promptText="Confirm Password"
                               styleClass="input-field" HBox.hgrow="ALWAYS"/>
                </HBox>
            </VBox>
        </VBox>

        <Region VBox.vgrow="ALWAYS"/>

        <HBox alignment="CENTER_RIGHT" spacing="15.0">
            <Button mnemonicParsing="false" onAction="#confirm" prefHeight="42.0" prefWidth="160.0"
                    styleClass="save-button" text="Save Changes">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
        </HBox>
    </VBox>
</HBox>