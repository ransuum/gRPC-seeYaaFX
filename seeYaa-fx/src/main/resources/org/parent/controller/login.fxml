<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="400.0" prefWidth="350.0" stylesheets="@static/login.css" xmlns="http://javafx.com/javafx/22"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.parent.controller.SceneController">
    <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefWidth="300.0" spacing="10.0" styleClass="login-card">
        <padding>
            <Insets bottom="30.0" left="25.0" right="25.0" top="30.0"/>
        </padding>
        <Label fx:id="labelLogin" styleClass="header-label" text="Welcome Back">
            <VBox.margin>
                <Insets bottom="15.0"/>
            </VBox.margin>
        </Label>

        <VBox spacing="2.0">
            <TextField fx:id="emailInput" prefHeight="45.0" promptText="Email Address" styleClass="input-field"/>
            <Label fx:id="incorrectInputEmail" styleClass="error-label" text="Invalid email address" visible="false"
                   wrapText="true"/>
        </VBox>

        <!-- Password Section -->
        <VBox spacing="2.0">
            <PasswordField fx:id="password" prefHeight="45.0" promptText="Password" styleClass="input-field"/>
            <Label fx:id="incorrectInputPassword" styleClass="error-label" text="Invalid password format"
                   visible="false" wrapText="true"/>
        </VBox>

        <Button fx:id="goButton" mnemonicParsing="false" onAction="#go" prefHeight="55.0" prefWidth="55.0"
                styleClass="action-button">
            <graphic>
                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@images/email.png"/>
                </ImageView>
            </graphic>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </Button>

        <HBox alignment="CENTER" spacing="5.0">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
            <Text fill="#7c7c7c" strokeType="OUTSIDE" strokeWidth="0.0" text="Don't have an account?">
                <font>
                    <Font size="11.0"/>
                </font>
            </Text>
            <Text fx:id="noHaveAcc" styleClass="link-text" text="Sign up"/>
        </HBox>

    </VBox>
</StackPane>